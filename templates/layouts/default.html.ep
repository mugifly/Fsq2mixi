<!DOCTYPE html>
<html>
  <head>
	<title><%= title %></title>
	
	<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	
	<%= stylesheet '/css/bootstrap.min.css' %>
	<%= stylesheet '/css/bootstrap-responsive.min.css' %>
	<%= javascript '/js/bootstrap.min.js' %>
	<%= javascript '/js/jquery-1.7.2.min.js' %>
	<%= javascript '/js/bootstrap.min.js' %>
	
	<style>
		body {
			padding-top:60px;
		}
		@media (max-width: 980px) {
			body {
				padding-top: 0;
			}
		}
		.header{
			padding: 30px;
			background-color: #f5f5f5;
		}
	</style>
	<% if ($page eq "1sq2mixi") { %>
		<link rel="apple-touch-icon" href="<%= url_for("/img/1sq2mixi_icon_styled_150.png") => begin %><% end %>"/>
	<% } else { %>
		<link rel="apple-touch-icon" href="<%= url_for("/img/fsq2mixi_icon_styled_150.png") => begin %><% end %>"/>
	<% } %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
	
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<%= link_to '/' => (class => 'brand') => begin %><%= image '/img/fsq2mixi_icon_styled_150.png', style=>'margin-top:-5px;' ,height=>"25px" %>&nbsp;&nbsp;&nbsp;fsq2mixi<% end %>
				<div class="nav-collapse">
					<ul class="nav">
						<% if ($page eq "Home") { %>
							<li class="active"><%= link_to '/' => begin %>Home<% end %></li>
							<li><%= link_to '/about' => begin %>About<% end %></li>
						<% }elsif ($page eq "About"){ %>
							<li><%= link_to '/' => begin %>Home<% end %></li>
							<li class="active"><%= link_to '/about' => begin %>About<% end %></li>
						<% }else{ %>
							<li><%= link_to '/' => begin %>Home<% end %></li>
							<li><%= link_to '/about' => begin %>About<% end %></li>
						<% } %>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</div>
	</div>
	
	<div class="container">
		<%= content %>
	</div>

<div align="right" style="margin-right: 50px;">fsq2mixi by <a href="https://github.com/mugifly/Fsq2mixi">Fsq2mixi Project</a>, <a href="http://ohgita.info/">Masanori</a>.</div>

</body>
</html>
